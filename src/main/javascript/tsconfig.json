{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "es2015",
      "es2016"
    ],
    "jsx": "preserve",
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      // These mappings are relative to "baseUrl".
      // Remember to keep in sync with `webpack.config.base.js`!
      "assets": ["../resources/assets"]
    }
  },
  "include": [
    "./src/**/*",
    "./ts-libs/**/*"
  ]
}